{{#each this}}
<li class="item">
    <div class="film-poster">
        <img class="film-photo" src=https://image.tmdb.org/t/p/w300{{poster_path}} alt="{{title}}" />
    </div>
    <h2 class="film-title">
        {{title}}
    </h2>
    <p class="film-info">
        {{#each genre_ids}} {{name}} {{/each}}| {{release_date}}
        <span class="film-popularity">{{vote_average}}</span>
    </p>
</li>
{{/each}}